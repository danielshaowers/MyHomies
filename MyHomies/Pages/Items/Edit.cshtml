@page
@model MyHomies.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.ItemID" />
            <div class="form-group">
                <label asp-for="Item.name" class="control-label"></label>
                <input asp-for="Item.name" class="form-control" />
                <span asp-validation-for="Item.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.checkOutTime" class="control-label"></label>
                <input asp-for="Item.checkOutTime" class="form-control" />
                <span asp-validation-for="Item.checkOutTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Item.checkedOut" /> @Html.DisplayNameFor(model => model.Item.checkedOut)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Item.reservedTime" class="control-label"></label>
                <input asp-for="Item.reservedTime" class="form-control" />
                <span asp-validation-for="Item.reservedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.maxTimeOut" class="control-label"></label>
                <input asp-for="Item.maxTimeOut" class="form-control" />
                <span asp-validation-for="Item.maxTimeOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.condition" class="control-label"></label>
                <input asp-for="Item.condition" class="form-control" />
                <span asp-validation-for="Item.condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.lateFee" class="control-label"></label>
                <input asp-for="Item.lateFee" class="form-control" />
                <span asp-validation-for="Item.lateFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
